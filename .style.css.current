    --pagination-bg-hover      : var(--e-global-color-7af83f7); /* pagination [bg:hover]      #C02975 */
    --pagination-bg-current    : var(--e-global-color-31f423a); /* pagination [bg:current]    #4AA521 */

    /* =========================================
